<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Category -->
    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Budgeted Amount -->
    <TextView
        android:id="@+id/tvBudgetedAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Budgeted: $0.00"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCategory"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spent Amount -->
    <TextView
        android:id="@+id/tvSpentAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spent: $0.00"
        android:textSize="14sp"
        android:textColor="#FF0000"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBudgetedAmount"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Available Amount -->
    <TextView
        android:id="@+id/tvAvailableAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Available: $0.00"
        android:textSize="14sp"
        android:textColor="#228B22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpentAmount"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>